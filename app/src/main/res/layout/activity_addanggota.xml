<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityAddAnggota"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tool_bar_activity"
        layout="@layout/tool_bar_activity" />

    <ImageView
        android:id="@+id/ivFotoAnggota"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/tool_bar_activity"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:src="@drawable/ic_empty_user"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilNoAnggota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivFotoAnggota"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tietNoAnggota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nomor Anggota"
            android:inputType="text"
            android:maxLines="1"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilNmAnggota"
        android:layout_below="@+id/tilNoAnggota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tietNmAnggota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Anggota"
            android:inputType="text"
            android:maxLines="1"/>
    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/spGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tilNmAnggota"
        android:paddingTop="10dp"
        android:entries="@array/choose_gender"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilAlamat"
        android:layout_below="@+id/spGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tietAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alamat"
            android:inputType="text"
            android:maxLines="1"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilNoTelp"
        android:layout_below="@+id/tilAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tietNoTelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nomor Telpon"
            android:inputType="number"
            android:maxLines="1"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilEmailAnggota"
        android:layout_below="@+id/tilNoTelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tietEmailAnggota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="text"
            android:maxLines="1"/>
    </android.support.design.widget.TextInputLayout>
</RelativeLayout>
